{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 120,
    "arrowParens": "always",
    "trailingComma": "all",
    "overrides": [
        {
            "files": "./zephyr-ui/**/*.html",
            "options": {
                "parser": "angular"
            }
        },
        {
            "files": "./zephyr-ui/**/*.ts",
            "options": {
                "parser": "typescript"
            }
        }
    ]
}